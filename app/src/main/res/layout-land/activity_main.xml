<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_height="@dimen/img_view_layout_heigth"
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/img_view_layout_margin_top"
        android:layout_marginBottom="@dimen/img_view_layout_margin_bottom"
        android:src="@drawable/udacity_wallpaper_finish"
        android:contentDescription="@string/wallpaper_description" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/txt_main_layout_height"
        android:layout_weight="2"
        android:paddingLeft="@dimen/txt_main_layout_pad_left"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/txt_view_margin_bottom"
            android:text="@string/udacity_name"
            android:textColor="@color/main_text_color"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/txt_view_margin_bottom"
            android:text="@string/udacity_phone"
            android:textColor="@color/main_text_color"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/txt_view_margin_bottom"
            android:text="@string/udacity_website"
            android:autoLink="web"
            android:textColor="@color/main_text_color"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/txt_view_margin_bottom"
            android:text="@string/udacity_address"
            android:textColor="@color/main_text_color"/>

    </LinearLayout>


</LinearLayout>
